<Window x:Class="Trains.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="525" Width="525"
        >
    <DockPanel >
        <Button x:Name="button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Click="button_Click" DockPanel.Dock="Top">
            <WrapPanel Orientation="Vertical">
                <ContentControl Template="{StaticResource AddIcon}" />
                <TextBlock Text="Додати потяг" Margin="1" HorizontalAlignment="Center"></TextBlock>
            </WrapPanel>
        </Button>

        <DataGrid  x:Name="projectDataGrid" DockPanel.Dock="Top"  />
    </DockPanel>
   
</Window>
