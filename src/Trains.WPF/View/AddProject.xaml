<Window x:Class="Trains.WPF.View.AddProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AddProject" Height="300" Width="300">
    <StackPanel
         Orientation="Vertical">
        <Label Content="Номер:" HorizontalAlignment="Center"/>
        <TextBox  x:Name="NUmber"/>
        <Label Content="Точка відправлення:" HorizontalAlignment="Center"/>
        <TextBox x:Name="DepartureLocation"/>
        <Label Content="Точка призначення:" HorizontalAlignment="Center"/>
        <TextBox x:Name="ArrivaleLocation"/>
        <Label Content="Дата відправлення:" HorizontalAlignment="Center"/>
        <TextBox x:Name="DepartureDate"/>
        <Label Content="Дата прибуття:" HorizontalAlignment="Center"/>
        <TextBox x:Name="ArricalDate"/>
        <Button x:Name="add" HorizontalAlignment="Right" Width="30" Click="button_Click" DockPanel.Dock="Left"  Margin="10">
            <WrapPanel Orientation="Vertical">
                <ContentControl Template="{StaticResource AddIcon}" HorizontalContentAlignment="Right" />
            </WrapPanel>
        </Button>
    </StackPanel>

</Window>
